# ============================================
# Telegram Bot Configuration
# ============================================
# Токен бота, полученный от @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# ID администраторов бота (через запятую, без пробелов)
# Пример: ADMIN_IDS=123456789,987654321
ADMIN_IDS=

# ============================================
# Database Configuration
# ============================================
# Хост базы данных PostgreSQL
DB_HOST=localhost

# Порт базы данных
DB_PORT=5432

# Имя пользователя базы данных
DB_USER=postgres

# Пароль пользователя базы данных
DB_PASSWORD=your_password_here

# Имя базы данных
DB_NAME=lict_rent

# ============================================
# Application Configuration
# ============================================
# Режим отладки (True/False)
DEBUG=False

# Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Security Configuration
# ============================================
# Секретный ключ для хеширования персональных данных (минимум 32 символа)
# ВАЖНО: Сгенерируйте уникальный ключ и никогда не раскрывайте его!
# Пример генерации: python -c "import secrets; print(secrets.token_urlsafe(32))"
HASH_PEPPER=your_secret_pepper_minimum_32_characters_here

